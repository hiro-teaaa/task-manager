<h1>Tasks#index</h1>
<p>Find me in app/views/main/index.html.erb</p>
<%= button_to "タスク新規登録", { controller: 'tasks', action: 'new' }, {method: :get } %>
<table>
  <thead>
  <tr>
    <th>タスク名</th>
    <th>終了期限</th>
    <th>優先度</th>
    <th>ステータス</th>
    <th>label</th>
    <th>削除</th>
  </tr>
  </thead>
<tbody>
<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.task_name, edit_task_path(task) %></td>
    <td><%= task.date_limit %></td>
    <td><%= task.priority %></td>
    <td><%= task.status %></td>
    <td>
      <% task.labels.each do |label| %>
        <%= label.label_name %>
      <% end %>
    </td>
    <td><%= link_to("削除", "/tasks/#{task.id}/destroy", {method: "post"} ) %></td>
  </tr>
<% end %>
</tbody>
</table>